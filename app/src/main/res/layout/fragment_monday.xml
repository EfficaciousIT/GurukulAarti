<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">



        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="1dp"
            android:background="@color/lightcolor"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/PeriodTime_studenttimetable"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:gravity="left|center_vertical"
                android:paddingStart="8dp"
                android:paddingLeft="5dp"
                android:text="Time"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/Subject_studenttimetable"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/PeriodTime_studenttimetable"
                android:gravity="left|center_vertical"
                android:paddingStart="8dp"
                android:text="Subject"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/Teacher_studenttimetable"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/Subject_studenttimetable"
                android:layout_weight="0.5"
                android:gravity="center|center_vertical"
                android:text="Teacher"
                android:textColor="@color/black" />
        </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/monday_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="73dp"
        android:layout_marginBottom="8dp" />
    </RelativeLayout>

